<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login2Activity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/od_logo"/>

    <TextView
        android:id="@+id/pass_announce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="暗証番号を入力して下さい"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/icon"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="暗証番号(4桁)"
        android:inputType="textPersonName"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/pass_announce"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/button_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/button_2"
        android:backgroundTint="#e5e5e5"
        android:text="1"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#e5e5e5"
        android:text="2"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/password"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/button_2"
        android:backgroundTint="#e5e5e5"
        android:text="3"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_1"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/button_5"
        android:backgroundTint="#e5e5e5"
        android:text="4"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#e5e5e5"
        android:text="5"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_2"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/button_2"
        android:backgroundTint="#e5e5e5"
        android:text="6"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_4"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@+id/button_8"
        android:backgroundTint="#e5e5e5"
        android:text="7"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#e5e5e5"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_5"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/button_6"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/button_8"
        android:backgroundTint="#e5e5e5"
        android:text="9"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="#e5e5e5"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_8"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="訂正"
        android:textColor="#FFEB3B"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/button_0"
        android:layout_marginStart="20dp"
        android:layout_below="@id/button_9"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/cancel"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/button_back"
        android:layout_marginStart="30dp"
        android:text="確定"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@id/cancel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:text="戻る"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>